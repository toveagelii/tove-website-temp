                "description": "e.g., 'For inquiries & commissions:', 'EU booking:', 'USA booking:'",
                "name": "label",
                "type": "string",
                "title": "Label/Description"
              },
              {
                "validation": [
                  {
                    "rules": [
                      {
                        "flag": "presence",
