[
  {
    "fields": [
      {
        "initialValue": true,
        "description": "Toggle to show/hide this project on the website",
        "name": "published",
        "type": "boolean"
      },
      {
        "name": "title",
        "type": "string"
      },
      {
        "description": "Optional short description under the title, e.g., Original Film Score or Runway Score",
        "name": "subtitle",
        "type": "string"
      },
      {
        "options": {
          "source": "title",
          "maxLength": 96
        },
        "validation": [
          {
            "rules": [
              {
                "flag": "custom"
              }
            ],
            "level": "error"
          }
        ],
        "description": "Click Generate to create a URL-friendly slug from the title",
        "name": "slug",
        "type": "slug",
        "title": "URL Slug"
      },
      {
        "name": "year",
        "type": "string"
      },
      {
        "options": {
          "hotspot": true
        },
        "name": "artwork",
        "type": "image"
      },
      {
        "options": {
          "list": [
            {
              "title": "Discography",
              "value": "discography"
            },
            {
              "title": "Score & Sound",
              "value": "score"
            }
          ],
          "layout": "radio"
        },
        "name": "category",
        "type": "string"
      },
      {
        "options": {
          "list": [
            {
              "title": "YouTube Video",
              "value": "youtube"
            },
            {
              "title": "Streaming Link",
              "value": "streaming"
            },
            {
              "title": "Image",
              "value": "image"
            },
            {
              "title": "Uploaded Video",
              "value": "uploadedVideo"
            }
          ],
          "layout": "radio"
        },
        "name": "mediaType",
        "type": "string"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "uri",
                "constraint": {
                  "options": {
                    "scheme": [
                      "/^http$/",
                      "/^https$/"
                    ],
                    "allowRelative": false,
                    "relativeOnly": false,
                    "allowCredentials": false
                  }
                }
              }
            ],
            "level": "error"
          }
        ],
        "description": "YouTube video URL, streaming service link. Leave empty if using an image or uploaded video.",
        "name": "mediaUrl",
        "type": "url",
        "title": "Media URL"
      },
      {
        "options": {
          "accept": "video/*"
        },
        "description": "Upload a short video (e.g., MP4/WebM). Keep it short to improve performance.",
        "hidden": "conditional",
        "name": "videoFile",
        "type": "file",
        "title": "Uploaded Video"
      },
      {
        "options": {
          "hotspot": true
        },
        "description": "Optional image shown before playback.",
        "hidden": "conditional",
        "name": "videoPoster",
        "type": "image",
        "title": "Video Poster (Thumbnail)"
      },
      {
        "options": {
          "hotspot": true
        },
        "description": "Upload an image if Media Type is set to 'Image', or leave empty if using YouTube/streaming",
        "name": "mediaImage",
        "type": "image"
      },
      {
        "rows": 4,
        "description": "Write a detailed description of the project",
        "name": "description",
        "type": "text",
        "title": "Project Description"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "uri",
                "constraint": {
                  "options": {
                    "scheme": [
                      "/^http$/",
                      "/^https$/"
                    ],
                    "allowRelative": false,
                    "relativeOnly": false,
                    "allowCredentials": false
                  }
                }
              }
            ],
            "level": "error"
          }
        ],
        "description": "Add a Spotify link (optional)",
        "name": "spotifyLink",
        "type": "url"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "uri",
                "constraint": {
                  "options": {
                    "scheme": [
                      "/^http$/",
                      "/^https$/"
                    ],
                    "allowRelative": false,
                    "relativeOnly": false,
                    "allowCredentials": false
                  }
                }
              }
            ],
            "level": "error"
          }
        ],
        "description": "Add a Bandcamp link (optional)",
        "name": "bandcampLink",
        "type": "url"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "uri",
                "constraint": {
                  "options": {
                    "scheme": [
                      "/^http$/",
                      "/^https$/"
                    ],
                    "allowRelative": false,
                    "relativeOnly": false,
                    "allowCredentials": false
                  }
                }
              }
            ],
            "level": "error"
          }
        ],
        "description": "Add a YouTube link (optional)",
        "name": "youtubeLink",
        "type": "url",
        "title": "YouTube Link"
      },
      {
        "validation": [
          {
            "rules": [
              {
                "flag": "uri",
                "constraint": {
                  "options": {
                    "scheme": [
                      "/^http$/",
                      "/^https$/"
                    ],
                    "allowRelative": false,
                    "relativeOnly": false,
                    "allowCredentials": false
                  }
                }
              }
            ],
            "level": "error"
          }
        ],
        "description": "Add a website link (optional)",
        "name": "websiteLink",
        "type": "url"
      }
    ],
    "name": "project",
    "type": "document"
  },
  {
    "fields": [
